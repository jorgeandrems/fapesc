    </div><!-- #sidebar -->
    <div id="main-content">
        <form class="" action="{{ path('relatorioExtratoPost', { 'idRelatorio': idRelatorio }) }}" method="POST">
            <fieldset class="">
                <legend>Extrato Bancário</legend>
                <div class="coluna2">
                    <label>Data do extrato:</label>
                    <input type="text" name="data" class="data" title="Informe a data do extrato." value="{{ data }}" />
